                                            <EasingColorKeyFrame KeyTime="0" Value="{StaticResource GrayButtonDisabledForeground}" />
                                        </ColorAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
