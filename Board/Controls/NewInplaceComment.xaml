<!-- Bind DataContext to EntryViewModel instance -->

<Border x:Class="Board.Controls.NewInplaceComment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Board.Controls" 
        xmlns:m="clr-namespace:Board.BusinessLogic.ViewModels.Main;assembly=Board.BusinessLogic" 
        d:DataContext="{d:DesignInstance Type=m:NewInplaceCommentViewModel}"
        mc:Ignorable="d" 
        Style="{StaticResource Card}" FocusManager.FocusedElement="{Binding ElementName=tbEntryTitle}">
    <StackPanel Orientation="Vertical">
        <TextBox x:Name="tbEntryTitle" Text="{Binding Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="{StaticResource DialogItemsMargin}"
                 TextWrapping="Wrap" Height="150" VerticalContentAlignment="Top" AcceptsReturn="True" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Command="{Binding SaveCommand}" Content="#Save" Style="{StaticResource DialogButton}" />
            <Button Command="{Binding CancelCommand}" Content="#Cancel" Style="{StaticResource DialogButton}" />
        </StackPanel>
    </StackPanel>
</Border>
